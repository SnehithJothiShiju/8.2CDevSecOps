pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SnehithJothiShiju/8.2CDevSecOps.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        
        stage('Fix Vulnerabilities') {
            steps {
                bat 'npm audit fix --force || exit /b 0'
            }
        }
        
        stage('Run Tests') {
            steps {
                withCredentials([string(credentialsId: 'SNYK_TOKEN', variable: 'SNYK_TOKEN')]) {
                    bat 'snyk auth %SNYK_TOKEN%'
                    bat 'npm test || exit /b 0'
                }
            }
        }
        
        stage('SonarCloud Analysis') {
            steps {
                withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
                    bat """
                        sonar-scanner -Dsonar.projectKey=SnehithJothiShiju_8.2CDevSecOps \
                        -Dsonar.organization=SnehithJothiShiju \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=https://sonarcloud.io \
                        -Dsonar.login=%SONAR_TOKEN% \
                        -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info \
                        -Dsonar.analysis.automatic=false
                    """
                }
            }
        }
    }
    
    post {
        always {
            junit '**/test-results.xml'  // If your tests generate JUnit reports
        }
    }
}